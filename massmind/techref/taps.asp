var f=this.form.nearist;
f.value = '';
var v=parseFloat(this.form.drill.value);
if (!isNaN(v)) {
var d=64;
var n=Math.floor(v*d+0.5);
while(Math.floor(n/2)==(n/2)) {n/=2;d/=2;}
var e=Math.floor(parseFloat((n/d)-v)*1000)/1000;
if (0==e) e=' PERFECT'; else e=' err:'+((Math.abs(e)==e) ? '+' : '')+e;
var p=Math.floor((parseInt(this.form.pitch.value)*(parseFloat(this.form.diameter.value)-(n/d)))/(0.013));
f.value += n+'/'+d+' ='+Math.floor(1000*n/d)/1000+e+' threads:'+p+'%';
n=Math.floor(n/2+.5);d/=2;	//force it one more down
while(Math.floor(n/2)==(n/2)) {n/=2;d/=2;}
e=Math.floor(parseFloat((n/d)-v)*1000)/1000;
if (!Math.floor(Math.abs(e*50))) {
	if (0==e) e=' PERFECT'; else e=' err:'+((Math.abs(e)==e) ? '+' : '')+e;
	p=Math.floor((parseInt(this.form.pitch.value)*(parseFloat(this.form.diameter.value)-(n/d)))/(0.013));
	f.value += '\n'+n+'/'+d+' ='+Math.floor(1000*n/d)/1000+e+' threads:'+p+'%';
	}
var g=this.form.guage;
for (var i=0;i!=g.options.length-1;i++) {
	n=parseFloat(g.options[i].value);
	if (isNaN(n)) 
		continue;
//	f.value+='\n'+i+'='+n;
	e=Math.floor(parseFloat(n-v)*1000)/1000;
	if (0==e) e=' PERFECT'; else e=' err:'+((Math.abs(e)==e) ? '+' : '')+e;
	p=Math.floor((parseInt(this.form.pitch.value)*(parseFloat(this.form.diameter.value)-n))/(0.013)+.7);
	if (!Math.floor(Math.abs((n-v)*150))) 
		f.value += '\n #'+g.options[i].text+' ='+g.options[i].value+e+' threads:'+p+'%';
	}
}
return false;
